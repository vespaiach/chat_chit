<%# filepath: /Users/toannguyen/stayon/chatter_app/app/views/profiles/show.html.erb %>
<div class="min-h-dvh flex items-center justify-center">
  <div class="px-8 py-12 rounded-xl bg-white min-w-[330px] max-w-md w-full">
    <div class="flex items-center justify-between mb-6">
      <h1 class="font-bold text-4xl">Your Profile</h1>
      <a href="<%= rooms_path %>" class="text-blue-600 hover:text-blue-800">Back to Rooms</a>
    </div>
    
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="flex flex-col items-center mb-8">
      <div class="w-32 h-32 rounded-full overflow-hidden mb-4 border border-gray-300">
        <% if @user.avatar.attached? %>
          <%= image_tag url_for(@user.avatar), alt: "Profile Avatar", class: "w-full h-full object-cover" %>
        <% else %>
          <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-500">
            No Image
          </div>
        <% end %>
      </div>
      <h2 class="text-2xl font-bold"><%= @user.name %></h2>
      <p class="text-gray-600"><%= @user.email %></p>
    </div>

    <div class="bg-gray-50 p-4 rounded-lg mb-6">
      <h3 class="text-lg font-semibold mb-2">Profile Information</h3>
      <div class="grid grid-cols-2 gap-y-2">
        <span class="text-gray-600">First Name:</span>
        <span class="font-medium"><%= @user.first_name %></span>
        
        <span class="text-gray-600">Last Name:</span>
        <span class="font-medium"><%= @user.last_name %></span>
      </div>
    </div>

    <div class="flex justify-center">
      <%= link_to "Edit Profile", edit_profile_path, class: "primary-button w-full" %>
    </div>
  </div>
</div>