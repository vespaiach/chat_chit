<div class="min-h-dvh flex items-stretch">
	<aside class="shrink-0 grow-0 basis-sm bg-slate-300">
		<h2><%= @room.name %></h2>
		<hr />
		<ul>
			<% @room.users.each do |user| %>
				<li><%= user.name %></li>
			<% end %>
		</ul>
	</aside>
	<main class="flex-1 flex flex-col" id="room-<%= @room.id %>">
		<div class="flex-1">
			<% @room.chats.each do |chat| %>
				<%= render "chats/simple_text", chat: %>
			<% end %>
		</div>
		<div data-controller="chat-input" class="shrink-0 grow-0 basis-0 p-4 flex items-center gap-2">
			<input type="text" data-chat-input-target="input" placeholder="Type a message..." data-action="keyup->chat-input#keyup" class="w-full p-2 border rounded" />
			<button data-action="click->chat-input#click" class="p-2 bg-blue-500 text-white rounded">Send</button>
		</div>
	</main>
</div>