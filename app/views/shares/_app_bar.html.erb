<section data-controller="app-bar" class="sticky top-0 bg-white w-full shadow-sm z-10 border-t-2 border-t-primary">
  <div class="mx-auto px-5 flex items-center justify-between">
    <nav class="text-sm" aria-label="Breadcrumb">
      <ol class="flex items-center gap-2">
        <li><a href="<%= root_path %>" class="hover:underline font-semibold">CHAT</a></li>
        <% if content_for(:breadcrumb) %>
        <svg xmlns="http://www.w3.org/2000/svg" height="12px" width="12px" fill="currentColor" viewBox="0 0 512 512">
          <path d="M 384.60093896713613 242.7793427230047 Q 396.61971830985914 256 384.60093896713613 269.2206572769953 L 153.84037558685446 499.981220657277 L 153.84037558685446 499.981220657277 Q 140.61971830985917 512 127.39906103286386 499.981220657277 Q 115.38028169014085 486.76056338028167 127.39906103286386 473.5399061032864 L 343.73708920187795 256 L 343.73708920187795 256 L 127.39906103286386 38.460093896713616 L 127.39906103286386 38.460093896713616 Q 115.38028169014085 25.239436619718308 127.39906103286386 12.018779342723004 Q 140.61971830985917 0 153.84037558685446 12.018779342723004 L 384.60093896713613 242.7793427230047 L 384.60093896713613 242.7793427230047 Z" />
        </svg>
        <li><%= content_for(:breadcrumb) %></li>
        <% end %>
      </ol>
    </nav>
    <div class="relative">
      <button data-app-bar-target="menuButton" data-action="click->app-bar#toggleMenu" class="p-2 focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      <div data-app-bar-target="dropdownMenu" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50">
        <a href="<%= profile_path %>" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Edit Profile</a>
        <%= link_to "Logout", "/signout", data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
      </div>
    </div>
  </div>
</section>
