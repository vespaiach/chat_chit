<div class="container is-fluid">
	<h1>Sign In</h1>
	<%= form_with(url: signin_path, scope: :session, local: true) do |form| %>
		<% if flash[:alert] %>
			<div><%= flash[:alert] %></div>
		<% end %>

			<div class="bulma-field">
				<label class="bulma-label"><%= form.label :email %></label>
				<div class="bulma-control bulma-has-icons-left bulma-has-icons-right">
					<%= form.email_field :email, class: "bulma-input", placeholder: "Email input", value: "hello@" %>
					<span class="bulma-icon bulma-is-small bulma-is-left">
						<i class="fas fa-envelope"></i>
					</span>
					<span class="bulma-icon bulma-is-small is-right">
						<i class="fas fa-exclamation-triangle"></i>
					</span>
				</div>
				<p class="bulma-help bulma-is-danger">This email is invalid</p>
			</div>

			<div class="bulma-field">
				<label class="bulma-label"><%= form.label :password %></label>
				<div class="bulma-control bulma-has-icons-left bulma-has-icons-right">
					<%= form.password_field :password, class: "bulma-input", placeholder: "Password input" %>
					<span class="bulma-icon bulma-is-small bulma-is-left">
						<i class="fa-regular fa-key"></i>
					</span>
					<span class="bulma-icon bulma-is-small is-right">
						<i class="fas fa-exclamation-triangle"></i>
					</span>
				</div>
				<p class="bulma-help bulma-is-danger">This password is invalid</p>
			</div>

		<%= form.submit 'Log In', class: 'bulma-button bulma-is-primary' %>
	<% end %>
</div>


