<div class="min-h-dvh flex items-center justify-center">
	<div class="max-w-sm w-full">

		<h1 class="font-bold text-2xl">Sign In</h1>

		<%= form_with(url: signin_path, class: 'flex flex-col items-start gap-4 mt-6', scope: :session, local: true) do |form| %>
			<% if flash[:alert] %>
				<div>
					<%= flash[:alert] %>
				</div>
			<% end %>

			<div class="w-full">
				<label>Email</label>
				<%= form.email_field :email, class: "w-full border border-gray-400 p-2" , placeholder: "Email input" %>
			</div>

			<div class="w-full">
				<label><%= form.label :password %></label>
				<%= form.password_field :password, class: "w-full border border-gray-400 p-2" , placeholder: "Password input" %>
			</div>

			<%= form.submit 'Log In' , class: 'bulma-button bulma-is-primary' %>

		<% end %>

	</div>
</div>